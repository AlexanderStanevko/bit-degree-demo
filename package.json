{
  "name": "gas-tracker-app",
  "description": "This is a demo project for Bit Degree.",
  "author": "Alexander Stanevko <dardawill@yandex.ru>",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint:js": "eslint ./src --ext .js,.json,.ts,.vue --quiet",
    "lint:css": "stylelint \"./**/*.{css,sass,scss,vue}\" --quiet",
    "lint": "yarn lint:css && yarn lint:js",
    "lint-fix": "yarn lint:css --fix && yarn lint:js --fix"
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue}": "eslint",
    "src/**/*.{vue,css,scss}": "stylelint"
  },
  "dependencies": {
    "apexcharts": "^3.42.0",
    "bootstrap": "^5.3.1",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-apexcharts": "^1.6.2",
    "vue-router": "^4.2.4",
    "vue3-apexcharts": "^1.4.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/node": "^18.17.5",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "@vitejs/plugin-vue": "^4.3.1",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.46.0",
    "eslint-plugin-vue": "^9.17.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.66.1",
    "stylelint": "^15.10.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vue-tsc": "^1.8.8"
  }
}